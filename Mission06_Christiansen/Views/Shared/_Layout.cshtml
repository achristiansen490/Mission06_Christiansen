@*
    _Layout.cshtml
    This is the main layout file used by all pages.
    It contains:
    - Navigation bar
    - Main content area
    - Footer
    - Shared CSS and JavaScript
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page title dynamically set from each view -->
    <title>@ViewData["Title"] - Mission06_Christiansen</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@* 
    Sticky footer layout:
    - flex column layout
    - main content expands
    - footer pushed to bottom
*@
<body class="d-flex flex-column min-vh-100">

    <!-- =========================
         NAVIGATION BAR
    ========================== -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">

                <!-- Site logo/title -->
                <a class="navbar-brand"
                   asp-controller="Home"
                   asp-action="Index">
                    Mission06_Christiansen
                </a>

                <!-- Mobile menu toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">

                        <!-- Home link -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <!-- Get to Know Joel link -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="GetToKnowJoel">
                                Get to Know Joel
                            </a>
                        </li>

                        <!-- Add Movie link -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="AddMovie">
                                Add Movie
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- =========================
         MAIN CONTENT AREA
         This expands and pushes
         the footer to the bottom
    ========================== -->
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- =========================
         FOOTER
         Always sticks to bottom
    ========================== -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2026 - Mission06_Christiansen -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- =========================
         SCRIPTS
    ========================== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
